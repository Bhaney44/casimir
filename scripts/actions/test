#!/bin/bash
# Test the GitHub Actions workflows in `.github/workflows`
#
# Example:
#
#    scripts/actions/test -w workflow-to-test
#
# Further information:
# See https://github.com/nektos/act
#

# Get args
while getopts w: flag
do
    case "${flag}" in
        w) workflow=${OPTARG};;
    esac
done

if [ -z "$workflow" ]; then
    echo "‚ö†Ô∏è Workflow is not set ‚Äì please specify as -w workflow-to-test (i.e. -w push)"
    exit 1
fi

# Get variables from root .env
export $(xargs < .env)

if [ -z "$SLACK_WEBHOOK_URL" ]; then
    echo "‚ö†Ô∏è SLACK_WEBHOOK_URL is not set ‚Äì please set a SLACK_WEBHOOK_URL in the root .env file"
    exit 1
fi

# From .env
SLACK_WEBHOOK_URL=$SLACK_WEBHOOK_URL

# Set default profile
profile="consensus-networks-dev"

if [ ${PROFILE+x} ]; then
    echo "PROFILE is set to '$PROFILE'"
    profile=$PROFILE
else
    export PROFILE="$profile"
    echo "PROFILE is not set, using default profile '$PROFILE'"
fi

export AWS_ACCESS_KEY_ID=$(aws configure get aws_access_key_id --profile $profile)
export AWS_SECRET_ACCESS_KEY=$(aws configure get aws_secret_access_key --profile $profile)

if [ -z "$AWS_ACCESS_KEY_ID" ] || [ -z "$AWS_SECRET_ACCESS_KEY" ]; then
    echo "üôà Could not find AWS credentials for profile '$profile'"
    exit 1
fi

# Run selected workflow
echo "üöÄ Running $workflow workflow"
act $workflow \
--rebuild \
--secret AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID \
--secret AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY \
--verbose
#!/bin/bash
# Destroy the CDK app from the CDK cluster
#
# Example:
#
#    scripts/cdk/destroy -d ./path/to/cdk-directory
#
# Further information:
# See https://docs.aws.amazon.com/cdk/api/v2/
#

# Get args
while getopts d: flag
do
    case "${flag}" in
        d) directory=${OPTARG};;
    esac
done

if [ -z "$directory" ]; then
    echo "‚ö†Ô∏è CDK source directory is not set ‚Äì please specify as -d ./path/to/cdk-directory"
    exit 1
fi

if [ -z "$(ls -A $directory)" ]; then
    echo "‚ö†Ô∏è CDK source directory is empty ‚Äì please make sure you have a valid CDK source directory"
    exit 1
fi

echo "üî• Destroying CDK app"
cd $directory
npm install
npx cdk destroy '**' --force --require-approval never
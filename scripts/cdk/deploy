#!/bin/bash
# Deploy CDK app to a cluster
#
# Example:
#
#    scripts/cdk/deploy -d ./path/to/cdk-directory
#
# Further information:
# See https://docs.aws.amazon.com/cdk/api/v2/
#

# Get args
while getopts d: flag
do
    case "${flag}" in
        d) directory=${OPTARG};;
    esac
done

if [ -z "$directory" ]; then
    echo "‚ö†Ô∏è CDK source directory is not set ‚Äì please specify as -d ./path/to/cdk-directory"
    exit 1
fi

if [ -z "$(ls -A $directory)" ]; then
    echo "‚ö†Ô∏è CDK source directory is empty ‚Äì please make sure you have a valid CDK source directory"
    exit 1
fi

echo "üöÄ Deploying CDK app"
OUT_DIR=$(pwd)/cdk-outputs.json
cd $directory

# Deploy CDK app
npx cdk bootstrap
npx cdk synth
npx cdk diff
# Log outputs for parsing in workflow
npx cdk deploy '**' --require-approval never --outputs-file $OUT_DIR --force






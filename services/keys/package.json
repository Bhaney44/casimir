{
    "name": "@casimir/keys",
    "private": "true",
    "main": "src/index.ts",
    "scripts": {
        "build": "node build.js",
        "compose": "npm run up",
        "dev": "npx esno -r dotenv/config src/index.ts",
        "down": "docker compose -f docker-compose.yaml down",
        "down:external": "docker compose -f scripts/resources/dkg/docker-compose.yaml down",
        "predev": "npm run up:external",
        "precompose": "npm run up:external",
        "postdev": "npm run down:external",
        "postcompose": "npm run down && npm run down:external",
        "up": "docker compose -f docker-compose.yaml up -d --build",
        "up:external": "docker compose -f scripts/resources/dkg/docker-compose.yaml up -d",
        "test": "jest --config jest.config.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "ethers": "^5.7.2",
        "minimist": "^1.2.7"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/jest": "^29.4.0",
        "@types/node": "^17.0.38",
        "dotenv": "^16.0.3",
        "esbuild": "^0.15.9",
        "jest": "^29.4.0",
        "ts-jest": "^29.0.5",
        "esno": "^0.16.3"
    }
}
